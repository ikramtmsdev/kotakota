<mvc:View
    controllerName="sap.ui.kotakota.controller.registerproduct.RegProduct"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap">
    	<m:Page>
        <m:headerContent>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <l:content>
                    <m:Breadcrumbs currentLocationText="Register Products List">
                        <m:Link text="Master Management"/>
                    </m:Breadcrumbs>
                </l:content>
            </l:VerticalLayout>
        </m:headerContent>
        <uxap:ObjectPageLayout>
            <uxap:headerTitle>
				<uxap:ObjectPageHeader
					objectTitle="Register Products List"
					objectSubtitle="">
					<!-- <uxap:actions>
						<uxap:ObjectPageHeaderActionButton
							id="save"
							text="{i18n>save}"
							hideText="false"
							press=".onSavePressed"
							type="Emphasized"/>
						<uxap:ObjectPageHeaderActionButton
							id="cancel"
							text="{i18n>cancel}"
							press=".onCancelPressed"
							hideText="false"/>
					</uxap:actions> -->
				</uxap:ObjectPageHeader>
			</uxap:headerTitle>
            <!-- <uxap:headerContent>
				<m:MessageStrip
					text="{
						parts: [
							'i18n>systemSettingsLastLoginTitle',
							'view>/currentUser',
							'view>/lastLogin'
						],
						formatter: '.formatter.formatMessage'
					}"
					type="Information"
					showIcon="true">
				</m:MessageStrip>
			</uxap:headerContent> -->
            <uxap:sections>
                <uxap:ObjectPageSection>
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                            <table:Table id="mainTable"
                                visibleRowCountMode="Auto"
                                minAutoRowCount="10"
                                alternateRowColors="true"
                                rows="{
                                    path: 'RegisterProduk>/value',
                                    sorter: {
                                        path: 'PenjualID'
                                    }
                                }">
                                <table:extension>
                                    <m:OverflowToolbar style="Clear">
                                        <m:Title text=" "/>
                                        <m:ToolbarSpacer/>                                        
                                        <m:Button
                                            icon="sap-icon://add-document"
                                            press="onAdd"/>
                                        <m:ToolbarSeparator/>
                                        <m:SearchField
                                            placeholder="Filter"
                                            value="{ui>/globalFilter}"
                                            search="filterGlobally"
                                            width="15rem"/>
                                    </m:OverflowToolbar>
                                </table:extension>
                                <table:columns>
                                    <table:Column
                                        label="Penjual ID">
                                        <table:template>
                                            <m:Text text="{RegisterProduk>PenjualID}" />
                                        </table:template>
                                    </table:Column>
                                    <table:Column
                                        label="Tipe Unit">
                                        <table:template>
                                            <m:Text text="{RegisterProduk>TipeUnit}" />
                                        </table:template>
                                    </table:Column>
                                    <table:Column
                                        label="Deskripsi">
                                        <table:template>
                                            <m:Text text="{RegisterProduk>Deskripsi}" />
                                        </table:template>
                                    </table:Column>
                                    <table:Column label="Partner Note">
                                        <table:template>
                                            <m:Text text="{RegisterProduk>PartnerNote}" />
                                        </table:template>
                                    </table:Column>
                                    <table:Column label="Status">
                                        <table:template>
                                            <m:Text text="{RegisterProduk>Active}" />
                                        </table:template>
                                    </table:Column>
                                    <table:Column width="9rem">
                                        <m:Label text="" />
                                        <table:template>
                                            <m:Button icon="sap-icon://delete" press="onDelete"/>
                                        </table:template>
                                    </table:Column>
                                </table:columns>
                            </table:Table>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
	</m:Page>
</mvc:View>
