<mvc:View
    controllerName="sap.ui.kotakota.controller.kontrakpartner.Create"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:f="sap.ui.layout.form">
    	<m:Page>
        <m:headerContent>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <l:content>
                    <m:Breadcrumbs currentLocationText="Add Kontrak Partner">
                        <m:Link text="Master Management"/>
                        <m:Link press="onBack" text="Kontrak Partner List"/>
                    </m:Breadcrumbs>
                </l:content>
            </l:VerticalLayout>
        </m:headerContent>
        <uxap:ObjectPageLayout>
            <uxap:sections>
                <uxap:ObjectPageSection>
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                            <uxap:blocks>
                                <f:Form id="formContainer" editable="true" ariaLabelledBy="Title1">
                                    <f:layout>
                                        <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
                                    </f:layout>                                    
                                    <f:formContainers>                        
                                        <f:FormContainer ariaLabelledBy="Title2"> 
                                                <f:FormElement label="FungsiKontrakPartner" visible="false">
                                                    <f:fields>
                                                        <m:ComboBox id="FungsiPartner" change="onChangeFungsiPartner" selectedKey="Contract Partner" placeholder="Please Select">
                                                            <m:items>
                                                                <core:Item text="Driver" key="Driver"/>
                                                                <core:Item text="Contract Partner" key="Contract Partner"/>
                                                                <core:Item text="Register Produk" key="Register Produk"/>
                                                            </m:items>
                                                        </m:ComboBox>
                                                    </f:fields>
                                                </f:FormElement>   
                                                <f:formElements>
                                                <f:FormElement label="Pelanggan ID">
                                                    <f:fields>                                       
                                                        <m:ComboBox required="true" placeholder="Please select" items="{oPelanggan>/value}"  id="PelangganID">                                
                                                            <m:items>                                                                                                
                                                                <core:Item text="{oPelanggan>ID}" key="{oPelanggan>ID}"/>
                                                            </m:items>
                                                        </m:ComboBox>
                                                    </f:fields>
                                                </f:FormElement>
                                                    <f:FormElement label="Penjual ID">
                                                        <f:fields>                                       
                                                            <m:ComboBox items="{oPenjual>/value}" placeholder="Please select" required="true" id="PenjualID">                                
                                                                <m:items>                                                                                                
                                                                    <core:Item text="{oPenjual>ID}" key="{oPenjual>ID}"/>
                                                                </m:items>
                                                            </m:ComboBox>
                                                        </f:fields>
                                                    </f:FormElement>
                                                    <f:FormElement label="Deskripsi">
                                                        <f:fields>
                                                            <m:Input placeholder="Type here.." id="Deskripsi"/>
                                                        </f:fields>
                                                    </f:FormElement>                                   
                                                    <f:FormElement label="Note">
                                                        <f:fields>
                                                            <m:TextArea placeholder="Type here.." id="PartnerNote"/>
                                                        </f:fields>
                                                    </f:FormElement> 
                                                    <f:FormElement label="Active">
                                                    <f:fields>
                                                        <m:Select id="Active">
                                                            <m:items>
                                                                <core:Item text="Active" key="Y"/>
                                                                <core:Item text="Inactive" key="N"/>
                                                            </m:items>
                                                        </m:Select>
                                                    </f:fields>
                                                </f:FormElement>                                 
                                            </f:formElements>
                                        </f:FormContainer>
                                    </f:formContainers>
                                </f:Form> 
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
        <m:footer>
			<m:OverflowToolbar id="otbFooter">
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save" press="onSave">
				</m:Button>
				<m:Button type="Reject" text="Cancel" press="onBack">
				</m:Button>
			</m:OverflowToolbar>
		</m:footer>
	</m:Page>
</mvc:View>
